<h1>Add to <%= @dish.menu.menu_name %> </h1>

<%= form_with model: @dish, url: new_user_restaurant_menu_dish_path do |form| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
        <% @dish.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class ="w-full">
  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>
  </div>

<div class="d-flex">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
  <%= f.input :dietary_type, :collection => %w[vegan vegetarian gluten-free lactose-free] %>
  </div>
  </div>

  <div class="d-flex">
  <div class="field">
  <%= form.label :description %>
  <%= form.text_field :description %>
</div>

  <div class="field">
    <%= form.label :price %>
    <%= form.float :price %>
  </div>
</div>


  <div class="actions">
    <%= form.submit 'Create Menu' %>
  </div>
<% end %>
