<body style="height: 100%">
<div class=bg-container-full>
<div class=main-card>

<div class="container" style="mt-20">
  <h1>Edit Dish</h1>

<%= form_for @dish, url: user_restaurant_menu_dish_path(@dish), method: :patch do |f| %>

  <p class="mb-10">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p class="mb-10">
    <%= f.label  :description %>
    <%= f.text_field :description %>
  </p>

  <p class="mb-10">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>

  <p class="btn-primary-cards b-10">
    <%= f.submit %>
  </p>
<% end %>
</div>
</div>
</div>
