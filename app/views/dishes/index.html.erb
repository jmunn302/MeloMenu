<h1>Add to <%= @menu.menu_name %> </h1>

<%= form_with model: @dish, url: user_restaurant_menu_dishes_path, method: :post do |form| %>

  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this menu from being saved:</h2>
      <ul>
        <% @dish.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="w-full">
    <div class="field">
      <%= form.label :category %>
      <%= form.text_field :category %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-items-around">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
    <p>Please label Vegan, Vegetarian, Gluten-Free or Lactose-Free
      <%= form.label :dietary_type %>
      <%= form.text_field :dietary_type %></p>
    </div>
  </div>

  <div class="d-flex">

    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>

    <div class="field">
      <%= form.label :price %>
      <%= form.number_field :price %>
    </div>
  </div>


  <div class="actions">
    <%= form.submit "Create Menu" %>
  </div>
<% end %>
