<h1>Email us!</h1>

<%= form_tag '/support', method: :post do  %>

<div class="form-group">
  <%= label_tag :name, 'Your Name:' %>
  <%= text_field_tag :name %>
</div>

<div class="form-group">
<%= label_tag :name, 'Restaurant Name:' %>
  <%= text_field_tag :name %>
</div>

<div class="form-group">
  <%= label_tag :name, 'Your email:' %>
  <%= text_field_tag :name %>
</div>

<div class="form-group">
  <%= label_tag :issue, 'What seems to be the issue?' %>
  <%= text_area_tag :issue %>
</div>

 <p class ="btn-primary" ><%= submit_tag 'Submit' %></p>
<% end %>
