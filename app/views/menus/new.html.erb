<body style="height: 100%">
<div class="bg-container-full">


  <div class="container main-card-wider d-flex flex-column align-items-stretch card-content">
  <h1>Create a New Menu</h1>

  <%= form_with model: @menu, url: user_restaurant_menus_path, method: :post do |form| %>
    <% if @menu.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this menu from being saved:</h2>
        <ul>
          <% @menu.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
<div class="d-flex flex-column w-full">
      <div class="field">
         <strong> <%= form.label :menu_name %>:</strong>
          <%= form.text_field :menu_name %>
        </div>
        <br>
        <div class="field d-flex flex-column">
          <strong><%= form.label :template_id %> Choice:</strong>
          <div class="d-flex w-full justify-content-between">
            <% @templates.each do |template| %>
              <div class="mr-4 mb-4 d-flex justify-content-start w-full align-items-center">
                <%= radio_button_tag(:template_id, template.id) %>
                <label class="pl-10"><%= template.name %></label>
              </div>
            <% end %>
          </div>
        </div>
        </div>
<br>
            <div class="actions">
              <%= form.submit 'Next', class: "btn-primary-cards" %>
            </div>
<br>
      <% end %>

